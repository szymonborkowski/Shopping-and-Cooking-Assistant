<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppingandcookingassistant">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingAndCookingAssistant"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SearchRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".ShoppingListsActivity"
            android:exported="false" />
        <activity
            android:name=".InventoryActivity"
            android:exported="false" />
        <activity
            android:name=".UserDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseSearchFiltersActivity"
            android:exported="false" />
        <activity
            android:name=".DisplaySpecificInstructionActivity"
            android:exported="false" />
        <activity android:name=".AddRecipeEvent" />
        <activity android:name=".LogInScreenActivity" />
        <activity android:name=".DisplayRecipeInstructions" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>