<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".CreateUserAccountActivity">


    <TextView
        android:id="@+id/first_name_title"
        android:layout_width="106dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:text="First Name"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/first_name_entry"
        app:layout_constraintTop_toTopOf="@+id/first_name_entry" />

    <EditText
        android:id="@+id/first_name_entry"
        android:layout_width="342dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:autofillHints="Enter first name here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surname_title"
        android:layout_width="106dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:text="Surname"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/surname_entry"
        app:layout_constraintTop_toTopOf="@+id/surname_entry" />

    <EditText
        android:id="@+id/surname_entry"
        android:layout_width="342dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:autofillHints="Enter surname here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name_entry" />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="172dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:text="Email Address"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/email_entry"
        app:layout_constraintTop_toTopOf="@+id/email_entry" />

    <EditText
        android:id="@+id/email_entry"
        android:layout_width="342dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:autofillHints="Enter username here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surname_entry" />

    <TextView
        android:id="@+id/username_title"
        android:layout_width="172dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:text="Username"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/username_entry"
        app:layout_constraintTop_toTopOf="@+id/username_entry" />

    <EditText
        android:id="@+id/username_entry"
        android:layout_width="342dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:autofillHints="Enter email address here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_entry" />

    <TextView
        android:id="@+id/password_title"
        android:layout_width="172dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:text="Password"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/password_entry"
        app:layout_constraintTop_toTopOf="@+id/password_entry" />

    <EditText
        android:id="@+id/password_entry"
        android:layout_width="342dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:autofillHints="Enter password here"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_entry" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>